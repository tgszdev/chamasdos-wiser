        // Testar conex√£o SMTP (com suporte Resend)
        function testSmtpConnection() {
            console.log('üß™ Testando configura√ß√£o SMTP...');
            
            const config = getSmtpConfig();
            if (!config) {
                showFeedback('‚ùå Nenhuma configura√ß√£o SMTP encontrada!', 'error');
                console.log('‚ùå Nenhuma configura√ß√£o encontrada para teste');
                return;
            }
            
            updateSmtpStatus(`üîÑ Testando ${config.useResend ? 'Resend API' : 'configura√ß√£o SMTP'}...`, 'info');
            
            // Fazer chamada para API de teste
            fetch('/api/smtp/test', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    host: config.host,
                    port: config.port,
                    user: config.user,
                    password: config.password,
                    security: config.security,
                    useResend: config.useResend || false,
                    resendApiKey: config.resendApiKey || ''
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const mode = data.mode === 'resend' ? 'üöÄ RESEND' : 'üóæ SIMULA√á√ÉO';
                    updateSmtpStatus(`‚úÖ ${mode}: ${data.message}`, 'success');
                    showFeedback(`‚úÖ Teste realizado com sucesso! Modo: ${mode}`, 'success');
                    console.log('‚úÖ Teste SMTP bem-sucedido:', data);
                } else {
                    updateSmtpStatus(`‚ùå Erro: ${data.error}`, 'error');
                    showFeedback(`‚ùå Falha no teste: ${data.error}`, 'error');
                    console.error('‚ùå Erro no teste SMTP:', data.error);
                }
            })
            .catch(error => {
                console.error('‚ùå Erro na requisi√ß√£o:', error);
                updateSmtpStatus('‚ùå Erro ao comunicar com o servidor. Validando localmente...', 'warning');
                
                // Fallback: valida√ß√£o local
                setTimeout(() => {
                    let errors = [];
                    
                    if (!config.host || !config.host.includes('.')) {
                        errors.push('Host SMTP inv√°lido');
                    }
                    if (!config.port || isNaN(config.port) || config.port < 1 || config.port > 65535) {
                        errors.push('Porta inv√°lida (1-65535)');
                    }
                    if (!config.user || !config.user.includes('@')) {
                        errors.push('E-mail inv√°lido');
                    }
                    if (!config.password || config.password.length < 4) {
                        errors.push('Senha muito curta (m√≠nimo 4 caracteres)');
                    }
                    
                    if (errors.length > 0) {
                        updateSmtpStatus(`‚ùå Erros encontrados: ${errors.join(', ')}`, 'error');
                        showFeedback('‚ùå Configura√ß√£o inv√°lida!', 'error');
                    } else {
                        updateSmtpStatus(`‚úÖ Configura√ß√£o b√°sica v√°lida (offline)`, 'success');
                        showFeedback('‚úÖ Configura√ß√£o b√°sica v√°lida!', 'success');
                    }
                }, 1000);
            });
        }
        
