{
  "name": "wms-chamados",
  "version": "1.0.0",
  "description": "Aplicativo Web para gerar chamados WMS formatados para WhatsApp",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.tsx",
    "dev:sandbox": "node src/index.js",
