  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "nodemailer": "^6.9.8",
    "@hono/node-server": "^1.8.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0"
  }
